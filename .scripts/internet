#!/bin/bash

# script to display the network state in dwmblocks

wifi=$(iwgetid -r)
upstate=$(ip a | grep BROADCAST,MULTICAST, | awk '{print $9}')
if [[ "x$wifi" = "x" ]];
    then
        printf "%s\\n" "ðŸ”Œ $upstate"
    else
        # printf "%s\\n" "ðŸ“¶ $wifi"
        echo "$(awk '/^\s*w/ { print "ðŸ“¶", int($3 * 100 / 70) "%" }' /proc/net/wireless)"
    fi
