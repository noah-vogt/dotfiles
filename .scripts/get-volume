#!/bin/bash 

# script to display the current volume and mute state in dwmblocks

mute=$( amixer sget Master | grep -e 'Front Left:' )
if [[ $mute =~ "[off]" ]]
then
    MUTEICON="ðŸ”‡" 
else
    MUTEICON="ðŸ”Š"
fi
vol=$( echo "$mute" | cut -d'[' -f2 )
VOLUME=$( echo "$vol" | rev | cut -c 2- | rev | tr -d ']')
printf "%s %s\\n" "$MUTEICON" "$VOLUME"
